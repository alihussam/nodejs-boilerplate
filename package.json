{
    "name": "nodejs-boilerplate",
    "version": "0.0.1",
    "description": "Nodejs Boilerplate",
    "main": "src/index.js",
    "engines": {
        "node": ">=12.17.0",
        "npm": ">=6.14.4"
    },
    "scripts": {
        "start": "node src/index.js",
        "start:debug": "DEBUG=node-server:* node src/index.js",
        "dev": "NODE_ENV=development DEBUG=node-server:* nodemon src/index.js",
        "dev:debug": "NODE_ENV=development DEBUG=node-server:* nodemon --inspect=0.0.0.0 src/index.js",
        "production": "NODE_ENV=production node src/index.js",
        "production:debug": "NODE_ENV=production DEBUG=node-server:* node src/index.js"
    },
    "keywords": [
        "Express",
        "Node",
        "Node.js",
        "Mongodb",
        "Mongoose",
        "Starter",
        "Starter code",
        "ES6",
        "ES7",
        "REST",
        "API",
        "REST API",
        "Boilerplate"
    ],
    "author": "Ali Hussam <alihussam.cs@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alihussam/nodejs-boilerplate.git"
    },
    "homepage": "https://github.com/alihussam/nodejs-boilerplate#readme",
    "bugs": {
        "url": "https://github.com/alihussam/nodejs-boilerplate/issues"
    },
    "dependencies": {
        "@hapi/joi": "17.1.1",
        "bcrypt": "5.0.0",
        "bluebird": "3.7.2",
        "body-parser": "1.19.0",
        "compression": "1.7.4",
        "cors": "2.8.5",
        "debug": "4.1.1",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "express-validation": "3.0.5",
        "helmet": "3.23.1",
        "http-status": "1.4.2",
        "jsonwebtoken": "8.5.1",
        "lodash": "4.17.15",
        "mongoose": "5.9.19",
        "morgan": "1.10.0",
        "nodemailer": "6.4.10",
        "socket.io": "2.3.0"
    },
    "devDependencies": {
        "eslint": "7.3.0",
        "eslint-config-airbnb-base": "14.2.0",
        "eslint-plugin-import": "2.21.2",
        "husky": "4.2.5",
        "lint-staged": "10.2.11",
        "nodemon": "2.0.4"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
